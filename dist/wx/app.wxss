
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}.home-book-footer .home-book-btn {
  width: 100%;
  color: #3696EF;
  font-weight: 500;
  font-size: 28rpx;
  border: 2rpx solid #EDEEEE;
  background: #fff;
}

.detail-bottom .detail-btn-read {
  width: 100%;
  border: none;
  color: #fff;
  background: #1EA3F5;
}

.detail-bottom .detail-btn-shelf {
  width: 100%;
  color: #1EA3F5;
  background: #fff;
  border: 2rpx solid #1EA3F5;
}

.detail-bottom .detail-btn-remove {
  width: 100%;
  color: #F96128;
  background: rgba(255,175,155,0.3);
  border: 2rpx solid #FFAF9B;
}

.search-item-icon .icon .van-icon {
  display: flex;
  align-items: center;
  height: 100%;
}